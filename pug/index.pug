        // begin footer
        footer.footer
            .container_center
                -var footerNav = ['Alexis Hudson', 'American Apparel', 'Ben Sherman', 'Big Buddha', 'Chanel', 'Christian Audigier', 'Coach', 'Cole Haan']

                mixin nav()
                    ul.footerNav__list
                        for item in footerNav
                            li
                                a(href='#')= item
                .footerNav
                    .footerNav__item
                        .footerNav__title fEATURED sALE
                        +nav()

                    .footerNav__item
                        .footerNav__title MENS STORE
                        +nav()

                    .footerNav__item
                        .footerNav__title wOMEN sTORE
                        +nav()

                    .footerNav__item
