        // end footer

        // Button trigger modal productModal
        //- button(class="btn btn-primary btn-lg" data-toggle="modal" data-target="#productModal") Click to open modal
        // Begin Modal productModal
        .modal.fade.productModal#productModal
            .modal-dialog
                .modal-content
                    a(href="#" class="modal-close" data-dismiss="modal")
                    .modal-body
                        .productModal__img
                            img(src="#", alt="alt")
                        .productModal__content
                            .productModal__name 
                            .productModal__price 
                            .productModal__description 
                            .productModal__action
                                button.btn(type="button") Buy

